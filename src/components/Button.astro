---
interface Props {
  text: string;
  variant?: "primary" | "secondary" | "outline";
  type?: "submit" | "reset" | "button";
}

const { text, variant, type = "submit" } = Astro.props;
---

<button
  class:list={[
    "h-fit w-fit rounded-md bg-accent px-6 py-3 font-semibold text-white",
    { "border border-light-gray bg-transparent": variant === "outline" },
  ]}
  type={type}>{text}</button
>
